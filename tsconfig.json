{
    "compilerOptions": {
        "esModuleInterop": true,
        "lib": [
            "ES2020"
        ],
        "module": "commonjs",
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "inlineSources": true,
        "target": "ES2021",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "outDir": "./build"
    },
    "exclude": [
        "node_modules"
    ]
}
